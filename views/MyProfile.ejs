<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile | SpeedX</title>
    
    <!-- Mobile Responsive -->
    <link rel="stylesheet" media="screen and (max-width:830px)" href="phone.css">

    <!-- Custom Css -->
    <link rel="stylesheet" href="speedx.css">
    <link rel="stylesheet" href="speedx.scss">


    <!-- FontAwesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>

<body>
    <!-- Navbar top -->
    <div class="MyProfile-navbar-top">
        <div class="My-profile-company-logo">
            <a href="/">
                <img src="images/SpeedX_free_file1.png" alt="loading">
            </a>
        </div>
        <div class="MyProfile-title">
            <h1>My Profile</h1>
        </div>
    </div>
    <!-- End -->

    <!-- MyProfile-sidenav -->
    <div class="MyProfile-sidenav">
        <div class="MyProfile">
            <img src="images/userImage.png" alt="" width="100" height="100">

            <div class="name">
                <%= user.name %>
            </div>

        </div>

        <div class="MyProfile-sidenav-MyProfile-url">
            <div class="MyProfile-url">
                <a href="/MyProfile" class="active">My Profile</a>
                <hr align="center">
            </div>
            <div class="MyProfile-url">
                <a href="/myorder">Orders</a>
                <hr align="center">
            </div>
            <div class="MyProfile-url">
                <a href="/">Home</a>
                <hr align="center">
            </div>
            <div class="MyProfile-url">
                <a href="/service">Services</a>
                <hr align="center">
            </div>

            <div class="MyProfile-url">
                <a href="/help">Help</a>
                <hr align="center">
            </div>
            <div class="MyProfile-url">
                <a href="#settings">Log Out</a>
                <hr align="center">
            </div>
        </div>
    </div>
    <!-- End -->

    <!-- MyProfile-main -->
    <div class="MyProfile-main">
        <h2>IDENTITY</h2>
        <div class="MyProfile-card">
            <div class="MyProfile-card-body">
                <i class="fas fa-edit fa-1x  " style="margin-left: 600px;"></i>
                <table>
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>:</td>
                            <td>
                                <%= user.name %>
                            </td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>:</td>
                            <td>
                                <%= user.email %>
                            </td>
                        </tr>
                        <tr>
                            <td>Address</td>
                            <td>:</td>
                            <td>
                                <%= user.address %>
                            </td>
                        </tr>
                        <tr>
                            <td>Phone</td>
                            <td>:</td>
                            <td>
                                <%= user.phone %>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="SpeedX-bottom-sign">
                <h6 style="color: white; margin-left: 390px;">
                    Taking you into great beyond!
                </h6>
            </div>
        </div>


    </div>
    <!-- End -->
    <script src="speedx.js"></script>

</body>

</html>